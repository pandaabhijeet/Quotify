<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_backgorund"
    android:layout_marginHorizontal="40dp"
    android:layout_gravity="center">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_image_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colour_transparent"
        android:text="Add an image"
        android:textAllCaps="false"
        android:textColor="@color/primary_red"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/option_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_image_text"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/camera_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Camera"
            android:textAlignment="center"
            android:textColor="@color/primary_red"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_below="@+id/add_image_text">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/gallery_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Gallery"
            android:textAlignment="center"
            android:textColor="@color/primary_red"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option_gallery"
        android:layout_centerHorizontal="true"
        android:text="Cancel"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary_red"
        android:background="@color/colour_transparent"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>